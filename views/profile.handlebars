<!-- html to generate list of posts based on search-->
<div>
    <button class="btn btn-outline-success my-2 my-sm-0" id="back-btn" type="submit">Back</button>
</div>

<h2 class="welcome">
  Welcome, {{name}}!
</h2>
{{#each posts as |post| }}
<div class="post-postd row mb-4 post">
  <div class="col-md-5">
    <h2>
      {{post.make_name}}
    </h2>
    <p>
      <span style="font-weight:bolder" class="salvage-title">Share Worthy? {{post.salvage_title}}</span></br>
      <span class="transmission">{{post.transmission}}</span>
    </p>
    <p style="font-weight:bolder">Posted on {{format_date post.createdAt}} @ {{format_time post.createdAt}}</p>
     {{!-- <button type="button" class="btn btn-primary" data-id={{post.id}} id="updateBtn">Update</button>  --}}
     <button type="button" class="btn btn-danger" data-id={{post.id}} id="deleteBtn">Delete</button>
  </div>
  <div class="col-md-7">
   <img src={{post.imageUrl}} alt={{post.make_name}} class="listImage"/>
  </div>
</div>
{{/each}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/js/back.js"></script>
<script src="/js/delete.js"></script>
