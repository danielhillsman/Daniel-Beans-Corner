<!-- html form to submit the post information (things defined in the model like transmission)-->
<h1 class="welcome">Create Your Post!</h1>
<h2 class="welcome">Enter whatever you like:</h2>

<div class="input-group mb-3">
  <input type="text" class="form-control" placeholder="Post Title" id="make_name" aria-describedby="basic-addon1">
</div>
<div class="input-group mb-3">
  <textarea class="form-control" placeholder="Post" rows="5" id="transmission" aria-describedby="basic-addon1"></textarea>
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="welcome input-group-text" for="inputGroupSelect01">Share Worthy?</label>
  </div>

 <input type="checkbox" class="salvage_title" name="salvage_title" value="true" />
    <label for="salvage_title" class="welcome">
      Check the box if you think it's share worthy.
    </label>

</div>

<div>
    <button id="upload_widget" class="cloudinary-button">Upload Post Photo</button>
</div>
<div>
    <button class="btn btn-outline-success my-2 my-sm-0" id="submit-btn">Submit</button>
</div>




<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src="/js/newpost.js"></script>
